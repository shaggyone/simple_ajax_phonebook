.row
  .span8
    %h1
      Test Phonebook
      %a.btn.btn-success{ href: phone_book_entries_path(format: :csv) }
        %i.icon-download-alt
        download
    #PhoneBook
      %table.table.table-stripped
        %thead
          %tr
            %th.span3
              Full name
            %th.span3
              Phone number
            %th
              &nbsp;
        %tbody.Index{ 'data-template' => '.TableRow' }

      = form_for PhoneBookEntry.new, html: { class: 'Form' } do |f|
        = f.text_field :full_name
        = f.text_field :phone_number

        %button.btn.btn-primary
          Save entry

      %form.FileUpload{ enctype: "multipart/form-data", action: upload_phone_book_entries_path, method: :post }
        %p
          %input{ name: 'file', type: 'file' }
          %button.btn.btn-success
            %i.icon-upload
            Upload file
        %p
          %label
            %input.UploadClassically{ type: 'checkbox' }
            Upload classically

      %script.TableRow{ type: "text/x-tmpl" }
        %tr
          %td.span3
            != "<%= phone_book_entry.full_name %>"
          %td.span3
            != "<%= phone_book_entry.phone_number %>"
          %td.span2
            %a.Edit{ href: '#' }
              %i.icon-edit
            %a.Destroy{ href: '#' }
              %i.icon-trash

